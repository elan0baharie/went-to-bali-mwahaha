<div id="to-remove<%= @product.id %>">
  <h4><%= link_to @product.name, product_path(@product, :hide_link => "true", :show_id => @product.id), id: "hide-show#{@product.id}", remote: true %></h4>
  <p>
    <%= image_tag("smile.jpg", size: '80') %>
  </p>
  <h6><%= @product.description %></h6>
  <% if current_user && current_user.admin %>
    <h5><%= link_to "Edit #{@product.name}", edit_product_path(@product) %></h5>

  <% end %>
</div>
