<% if current_user && current_user.admin %>
  <div class="section">
    <h5>Info for <%= @product.name %></h5>
    <%= form_for @product do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <%= f.label :price %>
      <%= f.number_field :price %>
      <%= f.submit %>
    <% end %>
  </div>

  <div class="section">
    <%= link_to "Delete?", product_path(@product), :data => {:confirm => "Are you sure?", :method => "delete"}, :class => "btn" %>
  </div>

<% end %>
